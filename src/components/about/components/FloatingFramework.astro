---
import {Image} from "astro:assets";
import VueIcon from "../../../assets/3d/vue-3d.png";
import LaravelIcon from "../../../assets/3d/laravel-3d.png";
---

<div class="flex flex-col">
  <span class="vue-icon">
      <Image src={VueIcon} alt="Vue (javascript framework) smooth 3d logo" class="floating" />
  </span>
  <span class="laravel-icon">
    <Image src={LaravelIcon} alt="Laravel (php framework) smooth 3d logo" class="floating" />
  </span>
</div>

<style>
  @keyframes floating {
    0% {
      transform: rotateY(0);
    }
    50% {
      transform: translateY(5px);
    }
    100% {
      transform: rotateY(0);
    }
  }

  @keyframes blur-gravity {
    0% {
      filter: blur(45px);
      opacity: 0.6;
    }
    50% {
      filter: blur(35px);
      opacity: 0.8;
    }
    100% {
      filter: blur(45px);
      opacity: 0.6;
    }
  }

  .floating {
    animation: floating 3s ease-in-out infinite both;
  }

  .laravel-icon {
    position: relative;
    transform: rotate(-20deg) translate(-25px, -25px);
    height: 120px;
    width: 120px;
  }

  .laravel-icon::after ,.vue-icon::after {
    content: '';
    position: absolute;
    padding: 20px;
    border-radius: 50%;
    top: 50%;
    right: 50%;
    transform: translate(50%, -50%);
    z-index: -1;
    filter: blur(35px);
    width: 100%;
    height: 100%;
    animation: blur-gravity 3s ease-in-out infinite both;
  }

  .laravel-icon::after {
    background: #FC574D;
  }

  .vue-icon {
    position: relative;
    transform: rotate(20deg) translate(25px, -25px);
    height: 150px;
    width: 150px;
    z-index: 5;
  }

  .vue-icon::after {
    background: #51F6AF;
  }

  @media (min-width: 768px) {
    .laravel-icon {
      height: 150px;
      width: 150px;
    }

    .vue-icon {
      height: 200px;
      width: 200px;
    }
  }
</style>