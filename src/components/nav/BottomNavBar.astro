---
import NavIcon from './NavIcon.astro';

const navItemList = [
    {
        label: 'Home',
        value: 'home',
    },
    {
        label: 'About',
        value: 'about',
    },
    {
        label: 'Works',
        value: 'work',
    },
    {
        label: 'Engagements',
        value: 'engagements',
    },
    {
        label: 'Contact',
        value: 'contact',
    },
];

---
<nav id="navbar" class="nav-wrapper mt-8 fixed bottom-5 right-1/2 z-50">
    <ul class="w-full py-1 px-4 flex justify-around gap-2 rounded-3xl items-center">
        {navItemList.map((item) => (
          <li class=`rounded-full items-center justify-center w-12 nav-item flex flex-col`>
              <a href={`#${item.value}`} class="py-1 px-3 flex gap-2">
                  <NavIcon icon={item.value} />
              </a>
          </li>
        ))}
    </ul>
</nav>

<style>
    .active {
        color: white;
        background-color: var(--primary);
        box-shadow: rgba(50, 50, 93, 0.25) 0 2px 5px -1px, rgba(0, 0, 0, 0.3) 0 1px 3px -1px;
    }

    .nav-wrapper {
        transition: transform .4s;
        transform: translate(50%, 150%);
        backdrop-filter: blur(16px) saturate(180%);
        -webkit-backdrop-filter: blur(16px) saturate(180%);
        background-color: rgba(255, 255, 255, 0.75);
        border-radius: 24px;
        border: 1px solid rgba(209, 213, 219, 0.3);
        box-shadow: rgba(99, 99, 99, 0.2) 0 2px 8px 0;
    }

    .active-nav {
      transform: translate(50%, -50%);
    }

    .nav-item {
        transition: background-color .3s, color .2s;
    }

    .nav-item:hover {
        background-color: var(--primary);
    }

    .nav-item:hover a {
        transition: color .3s;
    }

    .nav-item:hover a {
        color: white;
    }
</style>

<script src="../../static/js/navigation.js"></script>

