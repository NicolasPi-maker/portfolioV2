---
import ProjectStatus from './status/ProjectStatus.astro';
import { Image } from 'astro:assets';
const {title, logoPath, logoAlt, description, state, url} = Astro.props;

const logo = import(logoPath);
---

<div class="border p-4 rounded-3xl flex flex-col shadow relative bg-white md:hover:-translate-y-1.5 transition-transform duration-300">
    <div class="project-logo-wrapper rounded-2xl shadow bg-white">
        <Image src={logo} alt={logoAlt} class="object-cover rounded-2xl project-logo h-full w-full"/>
    </div>
    <div class="flex flex-col gap-4 mt-8 justify-center items-center">
        <h2 class="font-bold">{ title }</h2>
        <p class="text-sm text-center">{ description }</p>
        <ProjectStatus state={state} url={url} />
    </div>
</div>

<style>
    .project-logo-wrapper {
      height: 80px;
      max-width: 125px;
      position: absolute;
      top: 0;
      left: 50%;
      transform: translate(-50%, -50%);
    }
</style>
