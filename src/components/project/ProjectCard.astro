---
import ProjectStatus from './status/ProjectStatus.astro';
import { Image } from 'astro:assets';
const {title, logoPath, logoAlt, description, state, url} = Astro.props;

const logo = import(logoPath);
---

<div class="project-card-wrapper border p-4 rounded-3xl flex flex-col shadow relative bg-white md:hover:-translate-y-1.5 transition-transform duration-300">
    <div class="project-logo-wrapper rounded-2xl shadow z-20">
        <Image src={logo} alt={logoAlt} class="object-cover rounded-2xl project-logo h-full w-full"/>
    </div>
    <div class="flex flex-col gap-4 mt-8 justify-center items-center z-10">
        <h2 class="font-bold">{ title }</h2>
        <p class="text-sm text-center">{ description }</p>
        <ProjectStatus state={state} url={url} />
    </div>
    <Image src={logo} alt={logoAlt} class="bg-img-card object-cover grayscale rounded-3xl absolute h-full w-full hidden lg:flex"/>
</div>

<style>
    .project-logo-wrapper {
        height: 80px;
        max-width: 125px;
        position: absolute;
        top: 0;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    @media (min-width: 768px) {
      .project-card-wrapper:hover .bg-img-card {
          opacity: 0.05;
      }

      .bg-img-card {
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          opacity: 0;
        transition: opacity .3s;
      }
    }
</style>
