---
import DesktopNavBar from "../nav/DesktopNavBar.astro";
import ButtonLink from "../shared/ButtonLink.astro";
import ProfilePic from "../shared/ProfilePic.astro";

const birthdayTimeStamp = Date.parse("1997-03-13T11:00:00");
const currentDateTimeStamp = Date.now()

const timeDiff =  currentDateTimeStamp - birthdayTimeStamp

const setTimeStampToYear = (timestamp) => {
    let years;

    const minutes = timestamp / 60000
    const hours = minutes / 60
    const days = hours / 24
    const months = days / 30.436875
    years = months / 12

    // remove decimal
    return Math.round(years)
}

const currentYearsOld = setTimeStampToYear(timeDiff)
---

<DesktopNavBar />
<section class="justify-center items-center p-8 flex-1 overflow-hidden flex">
    <article class="flex flex-col gap-12 flex-auto md:flex-row justify-center items-center lg:w-2/3">
        <div class="xl:w-1/3 2xl:w-1/2 flex flex-col gap-6">
            <h1 class="text-5xl alatsi-regular lg:text-7xl">Hello I'm <span class="text-gradient alatsi-regular">Nicolas</span><br> web developer</h1>
            <div class="flex gap-4">
                <ButtonLink url="/contact" aria-label="redirect to contact form" label="Get in touch" />
                <ButtonLink customClass="hover:bg-primary transition-all duration-300 hover:text-white" downloadable={true} target="_blank" url="Pinier_Nicolas_cv.pdf" aria-label="download Pinier nicolas cv in pdf format" label="Download my CV" outlined={true}>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 14 14">
                        <rect width="14" height="14" fill="none" />
                        <g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M4.5 8L7 10.5L9.5 8M7 10.5v-7" />
                            <path d="M7 13.5a6.5 6.5 0 1 0 0-13a6.5 6.5 0 0 0 0 13" />
                        </g>
                    </svg>
                </ButtonLink>
            </div>
            <div class="gap-8 roboto-regular hidden md:flex flex-col max-w-2xl">
                <p>Passionate about technology and with a strong foundation in web development, I am a motivated and curious individual who is always eager to learn and improve.</p>
                <p>With a solid understanding of modern web technologies, I bring enthusiasm and a commitment to excellence in every project.</p>
                <p>At { currentYearsOld } years old, I am excited to contribute my skills and continue growing as a professional in the field.</p>
            </div>
        </div>
        <ProfilePic />
        <div class="flex flex-col gap-6 roboto-regular md:hidden">
            <p>Passionate about technology and with a strong foundation in web development, I am a motivated and curious individual who is always eager to learn and improve.</p>
            <p>With a solid understanding of modern web technologies, I bring enthusiasm and a commitment to excellence in every project.</p>
        </div>
    </article>
</section>
