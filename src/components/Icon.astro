---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';


interface Props {
    imagePath
    altText
}

const { imagePath, altText } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/icon/*.{svg}');
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "/src/assets/icon/*.{svg}"`);
---

<i>
    <Image src={images[imagePath]()} alt={altText} />
</i>