---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import pwa from '../assets/img/pwa.svg'
import profile from '../assets/img/rouned-profile.png';
import VueIcon from '../assets/3d/vue-3d.png';
import LaravelIcon from '../assets/3d/laravel-3d.png';
import MyButton from '../components/MyButton.astro';
import BottomNavBar from "../components/BottomNavBar.astro";
---

<Layout title="Welcome to Astro.">
	<main>
		<section id="home" class="p-8 h-screen">
			<article>

			</article>
			<h1 class="text-5xl alatsi-regular ">Hello I'm <span class="text-gradient alatsi-regular">Nicolas</span><br> web developer</h1>
			<div class="flex gap-4 my-6">
				<MyButton label="Get in touch" />
				<MyButton label="Download my cv" outlined={true} />
			</div>
			<div class="m-auto my-14 profile-pic-wrapper relative flex justify-center">
				<Image src={profile} alt="a photo of me, who smalling in black and white colors" class="rounded-full object-cover relative" />
			</div>
			<div class="flex flex-col gap-6 roboto-regular">
				<p>Passionate about technology and with a strong foundation in web development, I am a motivated and curious individual who is always eager to learn and improve.</p>
				<p>With a solid understanding of modern web technologies, I bring enthusiasm and a commitment to excellence in every project.</p>
			</div>
		</section>
		<BottomNavBar client:load />
		<section id="about" class="w-full h-screen bg-primary-50 flex flex-col gap-4 p-6">
			<article class="my-4">
				<div class="flex gap-4 w-full">
					<div class="box glass border-none full-box center border w-1/2 flex flex-col z-10">
						<span class="vue-icon">
							<Image src={VueIcon} alt="Vue (javascript framework) smooth 3d logo" class="floating" />
						</span>
						<span class="laravel-icon">
							<Image src={LaravelIcon} alt="Laravel (php framework) smooth 3d logo" class="floating" />
						</span>
					</div>
					<div class="flex center flex-auto flex-col gap-4">
						<div class="border box center w-full flex-grow bg-white overflow-hidden relative">
							<div class="flex flex-col absolute -top-7 center gap-2">
								<Image src={pwa} alt="mobile svg illustration for pwa skill developpement" />
								<p class="text-sm">PWA developper</p>
							</div>
						</div>
						<div class="border center box w-full half-box bg-white flex flex-col gap-2">
							<h2 class="text-gradient text-5xl">2+</h2>
							<p class="text-sm text-center">web developer years experience</p>
						</div>
					</div>
				</div>
				<div class="about-box center border half-box box my-4">
					<h2 class="text-white alatsi-regular text-5xl">About me</h2>
				</div>
				<div class="flex gap-4 w-full">
					<div class="flex flex-col gap-4 w-1/2">
						<div class="half-box box border w-full center flex flex-col gap-2">
							<h2 class="text-gradient text-5xl">3+</h2>
							<p class="text-sm text-center">Bachelorâ€™s degree</p>
						</div>
						<div class="flex gap-4 w-full">
							<div class="half-box box border center w-1/2 p-4 flex flex-col gap-2">
								<svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 16 16">
									<rect width="16" height="16" fill="none" />
									<g fill="none">
										<g clip-path="url(#gravityUiSealCheck0)">
											<path fill="url(#blue-gradient)" fill-rule="evenodd" d="M5.515 3.5h.621l.44-.44l1.07-1.07a.5.5 0 0 1 .708 0l1.07 1.07l.44.44H12a.5.5 0 0 1 .5.5v2.136l.44.44l1.07 1.07a.5.5 0 0 1 0 .708l-1.07 1.07l-.44.44V12a.5.5 0 0 1-.5.5H9.864l-.44.44l-1.07 1.07a.5.5 0 0 1-.708 0l-1.07-1.07l-.44-.44H4a.5.5 0 0 1-.5-.5V9.864l-.44-.44l-1.07-1.07a.5.5 0 0 1 0-.708l1.07-1.07l.44-.44V4a.5.5 0 0 1 .5-.5zm3.9-2.571a2 2 0 0 0-2.83 0L5.516 2H4a2 2 0 0 0-2 2v1.515L.929 6.585a2 2 0 0 0 0 2.83L2 10.484V12a2 2 0 0 0 2 2h1.515l1.07 1.071a2 2 0 0 0 2.83 0L10.484 14H12a2 2 0 0 0 2-2v-1.515l1.071-1.07a2 2 0 0 0 0-2.83L14 5.516V4a2 2 0 0 0-2-2h-1.515zM11.1 6.45a.75.75 0 1 0-1.2-.9L7.419 8.858L6.03 7.47a.75.75 0 0 0-1.06 1.06l2 2a.75.75 0 0 0 1.13-.08z" clip-rule="evenodd" />
										</g>
										<defs>
											<clipPath id="gravityUiSealCheck0">
												<path fill="currentColor" d="M0 0h16v16H0z" />
											</clipPath>
										</defs>
									</g>
								</svg>
								<p class="text-sm text-center">5+ web certifications</p>
								<svg xmlns="http://www.w3.org/2000/svg" class="absolute" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 375 200" version="1.1">
									<title>SVG Gradients: Fill & Stroke</title>
									<defs>
										<linearGradient id="blue-gradient" x1="0%" x2="100%" y1="0%" y2="0%">
											<stop offset="0%" stop-color="#A83BCFB3" />
